<resources>



    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- main activity action bar styles -->


    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/NeedleActionBarTab</item>
        <item name="actionBarTabStyle">@style/NeedleActionBarTab</item>
        <item name="android:actionBarTabTextStyle">@style/NeedleActionBarTabText</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionBarOverflowButton</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:logo">@drawable/ic_launcher</item>
        <item name="android:background">@color/needle_yellow</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="NeedleActionBarTab" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
       <item name="android:background">@drawable/tab_selector</item>
    </style>

    <style name="NeedleActionBarTabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyActionBarOverflowButton" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="colorButtonNormal">@color/grey</item>
    </style>



</resources>
