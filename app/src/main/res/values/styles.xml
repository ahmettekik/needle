<resources>



    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:listChoiceIndicatorSingle">
            @drawable/apptheme_btn_radio_holo_light
        </item>
    </style>

    <!-- main activity action bar styles -->

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionBarOverflowButton</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:logo">@mipmap/ic_launcher</item>
        <item name="android:background">@color/needle_yellow</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:homeAsUpIndicator">@drawable/apptheme_back_btn</item>
    </style>


    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/background_blue</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MyActionBarOverflowButton" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="colorControlNormal">@color/background_blue</item>
    </style>



</resources>
