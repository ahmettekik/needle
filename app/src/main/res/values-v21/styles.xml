<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoActionBar" parent="@android:style/Theme.Material.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:listChoiceIndicatorSingle">
            @drawable/apptheme_btn_radio_holo_light
        </item>
        <item name="android:colorPrimaryDark">@android:color/black</item>
    </style>

    <!-- main activity action bar styles -->

    <style name="AppTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionBarOverflowButton</item>
        <item name="android:colorPrimary">@color/needle_yellow</item>
        <item name="android:colorPrimaryDark">@color/orange</item>
        <item name="android:displayOptions">useLogo|showTitle|showHome</item>
    </style>



</resources>